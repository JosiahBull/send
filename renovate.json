{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "josiahbull"
  ],
  "extends": [
    "config:recommended"
  ],
  "onboarding": false,
  "packageRules": [
    {
      "automerge": true,
      "groupName": "monthly",
      "matchPackageNames": [
        "/^0\\./"
      ],
      "minimumReleaseAge": "30 days",
      "schedule": [
        "at 00:00 on the first day of the month"
      ]
    },
    {
      "automerge": true,
      "groupName": "major-monthly",
      "matchPackageNames": [
        "/^0\\./"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "90 days",
      "schedule": [
        "at 00:00 on the first day of the month"
      ]
    },
    {
      "automerge": true,
      "groupName": "semi-annual",
      "matchPackageNames": [
        "*telemetry*",
        "otel"
      ],
      "minimumReleaseAge": "180 days",
      "schedule": [
        "at 00:00 on the first day of January and July"
      ]
    }
  ],
  "prBodyNotes": [
    "Assigning @josiahbull if tests fail."
  ],
  "prBodyNotesWhen": {
    "statusCheckFail": true
  },
  "prConcurrentLimit": 0,
  "prCreation": "not-pending",
  "pre-commit": {
    "enabled": true
  }
}
