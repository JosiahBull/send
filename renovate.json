{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "josiahbull"
  ],
  "automerge": true,
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "automerge": true,
      "groupName": "monthly",
      "matchPackageNames": [
        "/^0\\./"
      ],
      "minimumReleaseAge": "30 days",
      "schedule": [
        "at 00:00 on the first day of the month"
      ]
    },
    {
      "automerge": true,
      "groupName": "major-monthly",
      "matchPackageNames": [
        "/^0\\./"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "90 days",
      "schedule": [
        "at 00:00 on the first day of the month"
      ]
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
